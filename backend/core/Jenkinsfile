pipeline {
    agent {
        label 'kriya'
    }

    environment {
        REGISTRY = "ghcr.io"
        GHCR_REPO = 'ghcr.io/csea-psgtech/codemania_csea-backend-core'
        IMAGE_TAG = 'latest'
        DOCKER_CREDS = credentials('psgdcgit')
        
        // Backend Core Environment Variables
        MONGO_URI = credentials('MONGO_URI')
        JWT_SECRET = credentials('JWT_SECRET')
        ADMIN_SECRET = credentials('ADMIN_SECRET')
        ADMIN_USERNAME = credentials('ADMIN_USERNAME')
        ADMIN_PASSWORD = credentials('ADMIN_PASSWORD')
        TEAM_ACCESS_CODE = credentials('TEAM_ACCESS_CODE')
        PORT = '5000'
        EXECUTION_SERVER_URL = 'http://localhost:6001'
        EXECUTION_SECRET = credentials('EXECUTION_SECRET')
    }

    stages {
        stage('Login to GHCR') {
            steps {
                sh '''
                    echo "$DOCKER_CREDS_PSW" | docker login $REGISTRY -u $DOCKER_CREDS_USR --password-stdin
                '''
            }
        }

        stage('Pull Docker Image') {
            steps {
                sh "docker pull ${GHCR_REPO}:${IMAGE_TAG}"
            }
        }

        stage('Stop Existing Container') {
            steps {
                script {
                    sh '''
                        # Stop any container using port 5000
                        CONTAINER_ID=$(docker ps -q --filter "publish=5000")
                        if [ ! -z "$CONTAINER_ID" ]; then
                            echo "Stopping container on port 5000: $CONTAINER_ID"
                            docker stop $CONTAINER_ID
                            docker rm $CONTAINER_ID
                        fi
                        
                        # Stop named container if exists
                        if [ "$(docker ps -aq --filter name=codemania-backend-core)" ]; then
                            echo "Stopping codemania-backend-core container"
                            docker stop codemania-backend-core || true
                            docker rm codemania-backend-core || true
                        fi
                    '''
                }
            }
        }

        stage('Run Container') {
            steps {
                sh """
                    docker run -d \
                        --name codemania-backend-core \
                        -p 5000:5000 \
                        -e MONGO_URI='${MONGO_URI}' \
                        -e JWT_SECRET='${JWT_SECRET}' \
                        -e ADMIN_SECRET='${ADMIN_SECRET}' \
                        -e ADMIN_USERNAME='${ADMIN_USERNAME}' \
                        -e ADMIN_PASSWORD='${ADMIN_PASSWORD}' \
                        -e TEAM_ACCESS_CODE='${TEAM_ACCESS_CODE}' \
                        -e PORT=${PORT} \
                        -e EXECUTION_SERVER_URL='${EXECUTION_SERVER_URL}' \
                        -e EXECUTION_SECRET='${EXECUTION_SECRET}' \
                        --restart unless-stopped \
                        ${GHCR_REPO}:${IMAGE_TAG}
                """
            }
        }

        stage('Verify Deployment') {
            steps {
                sh '''
                    echo "Waiting for container to start..."
                    sleep 5
                    docker ps | grep codemania-backend-core
                    echo "Container logs:"
                    docker logs codemania-backend-core --tail 20
                '''
            }
        }
    }

    post {
        always {
            sh 'docker logout ghcr.io'
        }
        success {
            echo 'Successfully deployed Backend Core!'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
            sh 'docker logs codemania-backend-core --tail 50 || true'
        }
    }
}
